<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        label {
            display: inline-block;
            width: 100px;
        }

        .item {
            margin: 5px;
        }

        h2 > label {
            width: inherit;
        }

        .editor-label, .editor-field {
            float: left;
            margin-top: 10px;
        }

            .editor-field input {
                height: 20px;
            }

        .editor-label {
            clear: left;
        }

        .editor-field {
            margin-left: 10px;
        }

        .display-label, .display-field {
            float: left;
            margin-top: 10px;
        }

        .display-field {
            height: 20px;
        }

        .display-label {
            clear: left;
        }

        .display-field {
            margin-left: 10px;
        }

        input[type=submit] {
            float: left;
            clear: both;
            margin-top: 10px;
        }

        .column {
            float: left;
            margin: 10px;
        }
    </style>
    <link rel="stylesheet" href="~/Styles/crumbsStyle.css" type="text/css" />
    <link rel="stylesheet" href="~/Styles/styles.css" type="text/css" />
</head>
<body>
    <div id="crumbs">
        <ul>
            <li>@Html.ActionLink("Главная", "Details", new { controller = "Home"})</li>
            <li>@Html.ActionLink("Файлы", "GetAll", new { controller = "File", id = "all" })</li>
            <li>@Html.ActionLink("Пользователи", "GetAll", new { controller = "User", id = "all" })</li>
            <li>@Html.ActionLink("Роли", "GetAll", new { controller = "Role", id = "all" })</li>
        </ul>
    </div>
    @RenderBody()
</body>
</html>